---
layout: base.njk
---

<article class="article-content">
  <header class="post-header">
    <h1>{{ title }}</h1>
    {% if page.date %}
    <p class="meta">发布于：{{ page.date | dateLocal('yyyy-LL-dd HH:mm') }}</p>
    {% endif %}
    <p class="meta">最后更新：{{ page.inputPath | fileUpdated | dateLocal('yyyy-LL-dd HH:mm') }}</p>
    
    {% if tags and tags.length > 0 %}
      <div class="post-tags">
        {% for tag in tags %}
          <span class="tag">{{ tag }}</span>
        {% endfor %}
      </div>
    {% endif %}
  </header>

  {% if excerpt %}
    <div class="post-excerpt">
      <p>{{ excerpt }}</p>
    </div>
  {% endif %}

  <section class="post-body">
    {{ content | safe }}
  </section>

  <footer class="post-footer">
    <div class="post-navigation">
      {% if env and env.isProd %}{% set homeHref = (site.url | trim('/')) ~ '/' %}{% else %}{% set homeHref = '/' %}{% endif %}
      <a href="{{ homeHref }}">← 返回首页</a>
    </div>
  </footer>
</article>
