<!doctype html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  {%- set site = (site or {}) -%}
  <title>{% if title %}{{ title }} — {% endif %}{{ site.title or 'Inchel Lee 的技术博客' }}</title>
  <meta name="description" content="{{ page.data.excerpt or site.description }}">

  <!-- Open Graph / Twitter -->
  <meta property="og:site_name" content="{{ site.title or 'Inchel Lee' }}">
  <meta property="og:title" content="{{ title or site.title }}">
  <meta property="og:description" content="{{ page.data.excerpt or site.description }}">
  {%- if site.url -%}
  <meta property="og:url" content="{{ (site.url | trim('/') ) ~ page.url }}">
  <link rel="canonical" href="{{ (site.url | trim('/') ) ~ page.url }}">
  {%- endif -%}
  <meta name="twitter:card" content="summary">

  {# Search engine verification tags (set in _data/site.json if available) #}
  {% if site.verification and site.verification.google %}
  <meta name="google-site-verification" content="{{ site.verification.google }}">
  {% endif %}
  {% if site.verification and site.verification.bing %}
  <meta name="msvalidate.01" content="{{ site.verification.bing }}">
  {% endif %}
  {% if site.verification and site.verification.baidu %}
  <meta name="baidu-site-verification" content="{{ site.verification.baidu }}">
  {% endif %}

  <link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="/feed.xml">
  <link rel="stylesheet" href="/assets/css/style.css">
  {% if site and site.url %}
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"WebSite",
    "name":{{ site.title | dump | safe }},
    "url":{{ (site.url | trim('/') ) | dump | safe }},
    "description":{{ site.description | dump | safe }}
  }
  </script>
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"Person",
    "name":{{ (site.author or site.title) | dump | safe }},
    "url":{{ (site.url | trim('/') ) | dump | safe }},
    "sameAs":["https://github.com/Inchel214"],
    "description":{{ site.description | dump | safe }}
  }
  </script>
  {% endif %}
</head>
<body>
  <header class="site-header">
    <div class="container header-inner">
  {% if env and env.isProd %}{% set homeHref = (site.url | trim('/')) ~ '/' %}{% else %}{% set homeHref = '/' %}{% endif %}
  <a class="brand" href="{{ homeHref }}" {% if page.url == '/' %}aria-current="page"{% endif %} data-i18n="brand">Inchel Lee</a>
      <div class="header-actions">
        <nav class="main-nav" role="navigation" aria-label="主要导航">
          <a href="{{ homeHref }}" {% if page.url == '/' %}aria-current="page"{% endif %} data-i18n="nav_home">首页</a>
          <a href="{{ homeHref }}#projects" data-i18n="nav_projects">项目</a>
          <a href="{{ homeHref }}#posts" data-i18n="nav_posts">文章</a>
          <a href="{{ homeHref }}#about" data-i18n="nav_about">关于</a>
          <a href="{{ homeHref }}#contact" data-i18n="nav_contact">联系我</a>
        </nav>
        <button id="lang-toggle" class="lang-toggle" type="button" aria-label="Switch language">EN</button>
      </div>
    </div>
  </header>

  <main id="content" class="container{% if page.url == '/' %} home-layout{% endif %}">
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="container">
  <p>© {{ "" | year }} Inchel Lee — Personal Website。</p>
    </div>
  </footer>

  <script src="/assets/js/lang.js"></script>

</body>
</html>
