---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
layout: base.njk
title: 标签
---

<section class="posts-grid posts-strips">
  <h2 class="section-title">标签：{{ tag }}</h2>
  {% if collections[tag] and collections[tag].length > 0 %}
    <div class="grid">
      {% for post in collections[tag] | reverse %}
        <article class="post-card">
          <div class="thumb">
            {% set cover = post.data.image or (post.templateContent | firstImageSrc) %}
            {% set cover = cover | normalizeCoverPath(post.url) %}
            {% if cover %}
              <img src="{{ cover }}" alt="{{ post.data.title or post.fileSlug }} 封面图">
            {% else %}
              <svg viewBox="0 0 100 60" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" aria-hidden="true">
                <defs>
                  <linearGradient id="cardGrad" x1="0" x2="1">
                    <stop offset="0%" stop-color="#6C5CE7" />
                    <stop offset="100%" stop-color="#00B894" />
                  </linearGradient>
                </defs>
                <rect width="100" height="60" fill="url(#cardGrad)"></rect>
              </svg>
            {% endif %}
          </div>
          <div class="post-info">
            <div class="post-title">
              <h3><a href="{{ post.url }}">{{ post.data.title or post.fileSlug }}</a></h3>
              <p class="meta"><span data-i18n="updated_label">更新于：</span>{{ (post.data.updated or post.date) | dateLocal("yyyy-LL-dd HH:mm") }}</p>
              {% if post.data.excerpt %}
                <p class="excerpt">{{ post.data.excerpt }}</p>
              {% endif %}
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <p data-i18n="tag_no_posts">暂时没有包含该标签的文章。</p>
  {% endif %}
  <p><a class="back-link" href="/tags/" data-i18n="tags_back_index">← 返回标签索引</a></p>
</section>